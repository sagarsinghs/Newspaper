<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!--This is for the main part showing the stock prices-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/ic_watch_later_black_24dp"
                    android:id="@+id/time"
                    android:drawablePadding="5dp"
                    android:text="2009-02-06 10.12.34"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/open"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="36975.23"/>

                      <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginLeft="15dp"
                          android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:visibility="gone"
                                android:id="@+id/arrow_green"
                                android:background="@drawable/ic_arrow_upward_black_24dp_green"/>
                          <ImageView
                              android:layout_width="wrap_content"
                              android:layout_height="30dp"
                              android:visibility="gone"
                              android:id="@+id/arrow_red"
                              android:background="@drawable/ic_arrow_upward_black_24dp_red"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:padding="10dp"
                              android:id="@+id/change"
                              android:textSize="20dp"
                              android:text="358.42"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:padding="10dp"
                              android:id="@+id/percentchange"
                              android:textSize="20dp"
                              android:text="0.98%"/>
                      </LinearLayout>

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_show_chart_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todays trend"
                android:layout_gravity="center_vertical"
                android:id="@+id/trend"
                />
</LinearLayout>
        </LinearLayout>
    <TableLayout
        android:id="@+id/tabla_cuerpo"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:layout_weight="1"
                android:text="Today's High"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:layout_weight="1"
                android:id="@+id/todayshigh"
                android:text="0.98%"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="14dp"
                android:textSize="14dp"
                android:text="Today's Low"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:id="@+id/todayslow"
                android:text="0.98%"/>


        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:layout_weight="1"
                android:text="Today's Open"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:id="@+id/todaysopen"
                android:text="0.98%"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Prev Close"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/previousclose"
                android:textSize="14dp"
                android:text="0.98%"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="S2 WK High"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:layout_weight="1"
                android:id="@+id/weekhigh"
                android:text="0.98%"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="S2 WKLow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:id="@+id/weeklow"
                android:textSize="14dp"
                android:text="0.98%"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:text="Advances"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:id="@+id/advances"
                    android:text="0.98%"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="14dp"
                    android:text="Declines"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/declines"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="123456"/>

        </TableRow>


    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Research Market Trend"/>



</LinearLayout>
